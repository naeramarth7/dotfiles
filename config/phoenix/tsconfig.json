{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["ES2021"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist/",
    "typeRoots": [
      "node_modules/@types",
      "typings/globals"
    ],
  },
  "exclude": [
    "node_modules"
  ]
}
