#!/usr/bin/env sh

# Get OS X Software Updates, and update installed Ruby gems, Homebrew, npm, and their installed packages
update() {
  sudo softwareupdate -i -a
  dinghy halt
  brew update
  brew upgrade
  brew cleanup
  brew cask cleanup
  npm install npm -g
  npm update -g
  sudo gem update --system
  sudo gem update
  dinghy upgrade
}
